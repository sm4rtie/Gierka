<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maj.gierka.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="358dp"
        android:layout_height="515dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/setBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp" />

        <CheckBox
            android:id="@+id/soundCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sound"
            android:layout_alignBaseline="@+id/setBtn"
            android:layout_alignBottom="@+id/setBtn"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/playBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            app:srcCompat="@drawable/przycisk1menu"
            android:background="@null"
            android:layout_above="@+id/practiceBtn"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/practiceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="88dp"
            app:srcCompat="@drawable/przycisk2menu"
            android:background="@null"
            android:layout_above="@+id/setBtn"
            android:layout_alignLeft="@+id/playBtn"
            android:layout_alignStart="@+id/playBtn" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
